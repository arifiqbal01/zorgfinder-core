{
  "apiVersion": 3,
  "name": "zorgfinder/appointment-form",
  "title": "Appointment Form",
  "category": "widgets",
  "icon": "calendar-alt",
  "description": "Frontend appointment booking form for providers.",
  "keywords": ["zorgfinder", "appointment", "booking"],

  "textdomain": "zorgfinder-core",

  "editorScript": "file:./index.js",
  "editorStyle": "file:./editor.scss",
  "style": "file:./style.scss",

  "render": "file:./render.php",

  "attributes": {
    "providerId": {
      "type": "integer",
      "default": 0
    },
    "title": {
      "type": "string",
      "default": "Book an Appointment"
    }
  },

  "supports": {
    "html": false
  }
}
