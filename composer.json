{
  "name": "zorgfinder/core",
  "description": "Core plugin for the ZorgFinder healthcare comparison platform.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "WebArtsy",
      "email": "support@webarsty.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "ZorgFinder\\": "src/",
      "ZorgFinder\\Bootstrap\\": "bootstrap/"
    },
    "files": [
      "bootstrap/helpers.php"
    ]
  },
  "require": {
    "php": ">=8.1",
    "composer/installers": "^2.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "scripts": {
    "post-autoload-dump": [
      "@php -r \"file_exists('vendor/autoload.php') && print('âœ… Autoload generated for ZorgFinder\\n');\""
    ],
    "test": "vendor/bin/phpunit",
    "lint": "vendor/bin/phpcs --standard=WordPress src bootstrap"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
